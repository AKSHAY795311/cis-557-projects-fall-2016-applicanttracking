<%= form_for @education, :html => { :class => "form-horizontal education" } do |f| %>

  <% if @education.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@education.errors.count, "error") %> prohibited this education from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @education.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :start, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_select :start, :class => 'form-control' %>
    </div>
    <%=f.error_span(:start) %>
  </div>
  <div class="form-group">
    <%= f.label :end_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_select :end_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:end_date) %>
  </div>
  <div class="form-group">
    <%= f.label :current, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :current, :class => 'form-control' %>
    </div>
    <%=f.error_span(:current) %>
  </div>
  <div class="form-group">
    <%= f.label :degree, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :degree, :class => 'form-control' %>
    </div>
    <%=f.error_span(:degree) %>
  </div>
  <div class="form-group">
    <%= f.label :school, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :school, :class => 'form-control' %>
    </div>
    <%=f.error_span(:school) %>
  </div>
  <div class="form-group">
    <%= f.label :gpa, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.number_field :gpa, :class => 'form-control' %>
    </div>
    <%=f.error_span(:gpa) %>
  </div>
  <div class="form-group">
    <%= f.label :major, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :major, :class => 'form-control' %>
    </div>
    <%=f.error_span(:major) %>
  </div>
  <div class="form-group">
    <%= f.label :minor, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :minor, :class => 'form-control' %>
    </div>
    <%=f.error_span(:minor) %>
  </div>
  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                educations_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
