<%- model_class = Admin -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<button type="button" class="btn btn-info" data-toggle="collapse" data-target="#demo">Ranking Metrics</button>
<%= render :partial => 'form' %>

<table class="table table-striped" id="applicant_table">
  <thead>
    <tr>
	  <th><%= model_class.human_attribute_name(:id) %></th>
	  <th><%= model_class.human_attribute_name(:score) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
	  <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @sorted_users.each do |user| %>
      <tr>
		<%puts "id: #{user.actual_user.id} user.score: #{user.score}"%>
		<td><%= link_to user.actual_user.id, user_admins_url(user.actual_user) %></td>
		<td><%= user.score%></td>
		<td><%= user.actual_user.first_name%></td>
		<td><%= user.actual_user.last_name%></td>
		<td><%= user.actual_user.email%></td>
		<td><%= user.actual_user.created_at%></td>
      </tr>
    <% end %>
  </tbody>
</table>
